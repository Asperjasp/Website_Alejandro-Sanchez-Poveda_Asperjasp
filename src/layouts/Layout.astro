---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import MusicalBackground from "../components/MusicalBackground.astro";
import "../styles/global.css";
import "@fontsource-variable/merriweather"; // Importing the Merriweather font // Comoe s variabble puedes utlizar cualquier grosor
  import Analytics from '@vercel/analytics/astro'
  declare global {

    interface Window {

      dataLayer: any[];
      gtag: (...args: any[]) => void;

    }

  }

  ---

  <!doctype html>
  <html lang="es">
    <head>
      <!-- Google tag (gtag.js) -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=G-VJXT58XLLB"
      ></script>
      <script>
      // Ensure the global dataLayer exists (Google Analytics expects this)
      // @ts-ignore
      window.dataLayer = window.dataLayer || []; // eslint-disable-line
      // Use the classic gtag wrapper that pushes `arguments` so Google
      // receives the same shape as the official snippet.
      function gtag(...args: any[]) {
        // Push the arguments array to dataLayer; this keeps the same
        // semantics as the official snippet while giving the function
        // a compatible TypeScript signature.
        // @ts-ignore
        window.dataLayer.push(args);
      }
      // Expose gtag on window explicitly so other scripts can call it
      // @ts-ignore
      window.gtag = gtag;
      gtag("js", new Date());
      gtag("config", "G-VJXT58XLLB");
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
  <!-- Favicon: ensure path points at the file in public/Photos. Use both rel="icon" and rel="shortcut icon" for compatibility -->
  <link rel="icon" type="image/x-icon" href="/Photos/Favicon.ico" />
  <link rel="shortcut icon" href="/Photos/Favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Alejandro SÃ¡nchez - asperjasp | Home</title>
  </head>
  <body>
    <!-- Style inspiration from deviantart -->
    <MusicalBackground />
    <Header />
    <slot />
    <Footer />
    <Analytics />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }
  html {
    font-family: "merriweather", system-ui, sans-serif;
    background-color: #0f172a;
  }
  body {
    justify-content: center;
    background-color: transparent;
    display: flex;
    flex-direction: column;
    color: #f1f5f9;
    min-height: 100vh;
  }
  
  h1, h2, h3, h4, h5, h6 {
    color: #f1f5f9;
  }
</style>
