<div class="absolute inset-0 z-0 overflow-hidden opacity-10">
  <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
    <defs>
      <pattern
        id="music-staff"
        width="100"
        height="20"
        patternUnits="userSpaceOnUse"
      >
        <!-- Lines of the staff -->
        <line x1="0" y1="0" x2="100" y2="0" stroke="#a0a0a0" stroke-width="0.5"
        ></line>
        <line x1="0" y1="5" x2="100" y2="5" stroke="#a0a0a0" stroke-width="0.5"
        ></line>
        <line
          x1="0"
          y1="10"
          x2="100"
          y2="10"
          stroke="#a0a0a0"
          stroke-width="0.5"></line>
        <line
          x1="0"
          y1="15"
          x2="100"
          y2="15"
          stroke="#a0a0a0"
          stroke-width="0.5"></line>
        <line
          x1="0"
          y1="20"
          x2="100"
          y2="20"
          stroke="#a0a0a0"
          stroke-width="0.5"></line>

        <!-- A few notes -->
        <circle cx="20" cy="12.5" r="2" fill="#505050"></circle>
        <line
          x1="22"
          y1="12.5"
          x2="22"
          y2="2.5"
          stroke="#505050"
          stroke-width="1.5"></line>

        <circle cx="60" cy="7.5" r="2" fill="#505050"></circle>
        <line
          x1="62"
          y1="7.5"
          x2="62"
          y2="17.5"
          stroke="#505050"
          stroke-width="1.5"></line>
      </pattern>
    </defs>
    <rect x="0" y="0" width="100%" height="100%" fill="url(#music-staff)"
    ></rect>
  </svg>
</div>
