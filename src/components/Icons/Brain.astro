---
// Brain / ML / AI icon
interface Props {
  class?: string;
  size?: number;
}
const { class: className = "", size = 16 } = Astro.props;
---

<svg
  class={className}
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="1.5"
  stroke-linecap="round"
  stroke-linejoin="round"
>
  <!-- Brain outline left -->
  <path d="M9.5 2A5.5 5.5 0 0 0 4 7.5c0 1.5.6 2.9 1.6 4-.4.8-.6 1.6-.6 2.5A5 5 0 0 0 10 19v2" />
  <!-- Brain outline right -->
  <path d="M14.5 2A5.5 5.5 0 0 1 20 7.5c0 1.5-.6 2.9-1.6 4 .4.8.6 1.6.6 2.5a5 5 0 0 1-5 5v2" />
  <!-- Center line -->
  <line x1="12" y1="2" x2="12" y2="21" stroke-dasharray="2 2" opacity="0.5" />
  <!-- Neural connections -->
  <circle cx="8" cy="8" r="1" fill="currentColor" opacity="0.6" />
  <circle cx="16" cy="8" r="1" fill="currentColor" opacity="0.6" />
  <circle cx="10" cy="14" r="1" fill="currentColor" opacity="0.6" />
  <circle cx="14" cy="14" r="1" fill="currentColor" opacity="0.6" />
</svg>
