---
const currentPath = Astro.url.pathname;

// Función para determinar si un link está activo
const isActive = (path: string) => {
  if (path === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(path);
};
---

<header class="flex justify-center items-center py-4 w-full bg-gray-950 sticky top-0 z-50 border-b border-slate-800">
  <nav class="flex flex-row gap-x-2 text-white">
    <a 
      class={`nav-link ${isActive('/') ? 'active' : ''}`} 
      href="/"
    >
      Inicio
    </a>
    <a 
      class={`nav-link ${isActive('/about') ? 'active' : ''}`} 
      href="/about"
    >
      Acerca de
    </a>
    <a 
      class={`nav-link ${isActive('/projects') ? 'active' : ''}`} 
      href="/projects"
    >
      Proyectos
    </a>
    <a 
      class={`nav-link ${isActive('/contact') ? 'active' : ''}`} 
      href="/contact"
    >
      Contacto
    </a>
  </nav>
</header>
  