---
// Elegant language toggle for header
// ES | EN | 日本語 | 中文
interface Props {
  currentLang?: string;
}
const { currentLang = "es" } = Astro.props;
---

<div class="lang-toggle">
  <button 
    class={`lang-btn ${currentLang === 'es' ? 'active' : ''}`}
    data-lang="es"
    title="Español"
  >
    ES
  </button>
  <span class="lang-sep">|</span>
  <button 
    class={`lang-btn ${currentLang === 'en' ? 'active' : ''}`}
    data-lang="en"
    title="English"
  >
    EN
  </button>
  <span class="lang-sep">|</span>
  <button 
    class={`lang-btn ${currentLang === 'ja' ? 'active' : ''}`}
    data-lang="ja"
    title="日本語 (Japanese)"
  >
    日本語
  </button>
  <span class="lang-sep">|</span>
  <button 
    class={`lang-btn ${currentLang === 'zh' ? 'active' : ''}`}
    data-lang="zh"
    title="中文 (Chinese)"
  >
    中文
  </button>
</div>

<style>
  .lang-toggle {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.7rem;
    font-weight: 500;
  }

  .lang-btn {
    background: transparent;
    border: none;
    color: #64748b;
    cursor: pointer;
    padding: 0.25rem 0.4rem;
    border-radius: 0.25rem;
    transition: all 0.2s ease;
    font-family: inherit;
    font-size: 0.7rem;
    text-decoration: none;
  }

  .lang-btn:hover {
    color: #e2e8f0;
    background: rgba(59, 130, 246, 0.1);
  }

  .lang-btn.active {
    color: #3b82f6;
    background: rgba(59, 130, 246, 0.15);
  }

  .lang-sep {
    color: #334155;
    font-weight: 300;
    user-select: none;
  }

  @media (max-width: 640px) {
    .lang-toggle {
      font-size: 0.6rem;
      gap: 0.15rem;
    }
    
    .lang-btn {
      padding: 0.2rem 0.3rem;
      font-size: 0.6rem;
    }
  }
</style>

<script>
  // Language toggle functionality (placeholder - expand with i18n later)
  document.querySelectorAll('.lang-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const lang = (btn as HTMLElement).dataset.lang;
      // For now, just update active state visually
      document.querySelectorAll('.lang-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      // TODO: Implement actual language switching with i18n
      console.log(`Language switched to: ${lang}`);
    });
  });
</script>
