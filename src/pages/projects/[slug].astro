---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const projectEntries = await getCollection('Projects');
  // Only return serializable params (slug). Do NOT pass the full entry object in props,
  // because it contains functions and is not serializable for the static build.
  return projectEntries.map(entry => ({
    params: { slug: entry.id.replace('.md', '') },
  }));
}

// Load the entry server-side using the slug param. This avoids serializing the full entry
// through getStaticPaths (which strips methods like `render`).
const slug = Astro.params.slug;
const projectEntries = await getCollection('Projects');
const entry = projectEntries.find(e => e.id.replace('.md', '') === String(slug));
if (!entry) {
  throw new Error(`Project not found: ${slug}`);
}
// Prefer using `entry.body` rendered HTML for compatibility with the content loader.
// Some loader configurations provide `body` (HTML string) but not a `render()` method
// at runtime. Using `body` avoids "entry.render is not a function" errors during build.
const body = entry.body ?? '';
const { title, description, thumbnail, technologies, links, startDate, endDate, status, featured } = entry.data;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('es-ES', { year: 'numeric', month: 'long' }).format(date);
};
---

<Layout title={`${title} - Proyecto`}>
  <main class="min-h-screen py-12 px-4">
    <article class="max-w-4xl mx-auto">
      <!-- Breadcrumb -->
      <nav class="text-sm text-slate-400 mb-6">
        <a href="/" class="hover:text-blue-400">Inicio</a> 
        <span class="mx-2">/</span>
        <a href="/projects" class="hover:text-blue-400">Proyectos</a>
        <span class="mx-2">/</span>
        <span class="text-white">{title}</span>
      </nav>

      <!-- Header -->
      <header class="mb-8">
        <div class="flex items-center gap-3 mb-4">
          {featured && (
            <span class="text-yellow-400 text-sm font-semibold px-3 py-1 bg-yellow-900/30 rounded-lg">
              ‚≠ê Proyecto Destacado
            </span>
          )}
          <span class={`text-xs font-medium px-3 py-1 rounded-lg ${
            status === 'completed' ? 'bg-green-900/30 text-green-400' :
            status === 'in-progress' ? 'bg-blue-900/30 text-blue-400' :
            'bg-gray-900/30 text-gray-400'
          }`}>
            {status === 'completed' ? '‚úì Completado' : 
             status === 'in-progress' ? '‚ö° En progreso' : 
             'üì¶ Archivado'}
          </span>
        </div>
        
        <h1 class="text-5xl font-bold text-white mb-4">
          {title}
        </h1>
        
        <p class="text-xl text-slate-300 mb-6">
          {description}
        </p>
        
        <div class="flex items-center gap-4 text-sm text-slate-400">
          <time datetime={startDate.toISOString()}>
            {formatDate(startDate)}
          </time>
          {endDate && (
            <>
              <span>‚Üí</span>
              <time datetime={endDate.toISOString()}>
                {formatDate(endDate)}
              </time>
            </>
          )}
        </div>
      </header>

      <!-- Imagen principal -->
      <div class="mb-8 rounded-xl overflow-hidden shadow-2xl">
        <img 
          src={thumbnail.url} 
          alt={thumbnail.alt}
          class="w-full h-auto object-cover"
        />
      </div>

      <!-- Links del proyecto -->
      {links && (
        <div class="mb-8 flex flex-wrap gap-4">
          {links.github && (
            <a
              href={links.github}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-gray-700 to-gray-800 text-white rounded-lg font-medium hover:from-gray-600 hover:to-gray-700 transition-all shadow-lg"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              Ver en GitHub
            </a>
          )}
          {links.demo && (
            <a
              href={links.demo}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-lg font-medium hover:from-blue-500 hover:to-blue-600 transition-all shadow-lg"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
              Ver Demo
            </a>
          )}
          {links.website && (
            <a
              href={links.website}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-purple-600 to-purple-700 text-white rounded-lg font-medium hover:from-purple-500 hover:to-purple-600 transition-all shadow-lg"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
              </svg>
              Visitar Sitio Web
            </a>
          )}
        </div>
      )}

      <!-- Tecnolog√≠as utilizadas -->
      <div class="mb-8 p-6 bg-slate-800/50 rounded-xl border border-slate-700">
        <h2 class="text-2xl font-bold text-white mb-4">üõ†Ô∏è Tecnolog√≠as Utilizadas</h2>
        <div class="flex flex-wrap gap-3">
          {technologies.map((tech) => (
            <span class="project-tag text-base px-4 py-2">{tech}</span>
          ))}
        </div>
      </div>

      <!-- Contenido del proyecto (Markdown) -->
      <div class="prose prose-invert prose-lg max-w-none mb-12">
        <div class="p-6 bg-slate-800/30 rounded-xl border border-slate-700">
          <div set:html={body} />
        </div>
      </div>

      <!-- Navegaci√≥n -->
      <div class="mt-12 pt-8 border-t border-slate-700">
        <a
          href="/projects"
          class="inline-flex items-center gap-2 text-blue-400 hover:text-blue-300 font-medium transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          Volver a todos los proyectos
        </a>
      </div>
    </article>
  </main>
</Layout>

<style>
  .prose :global(h2) {
    color: #f1f5f9;
    font-size: 1.875rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose :global(h3) {
    color: #e2e8f0;
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .prose :global(p) {
    color: #cbd5e1;
    line-height: 1.75;
    margin-bottom: 1rem;
  }
  
  .prose :global(ul), .prose :global(ol) {
    color: #cbd5e1;
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }
  
  .prose :global(li) {
    margin-bottom: 0.5rem;
  }
  
  .prose :global(code) {
    background-color: #1e293b;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
    color: #93c5fd;
  }
  
  .prose :global(pre) {
    background-color: #1e293b;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1rem;
  }
  
  .prose :global(a) {
    color: #60a5fa;
    text-decoration: underline;
  }
  
  .prose :global(a:hover) {
    color: #93c5fd;
  }
  
  .prose :global(blockquote) {
    border-left: 4px solid #3b82f6;
    padding-left: 1rem;
    color: #94a3b8;
    font-style: italic;
    margin: 1.5rem 0;
  }
  
  .prose :global(img) {
    border-radius: 0.5rem;
    margin: 1.5rem 0;
  }
</style>
